generator client {
  provider     = "prisma-client"
  output       = "../src/lib/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

model User {
  id Int @id @default(autoincrement())

  email     String   @unique
  password  String
  role      UserRole
  is_active Boolean  @default(true)

  name      String
  phone     String?
  photo_url String?
  position  String

  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  attendances Attendance[]

  @@map("users")
}

enum UserRole {
  STAFF
  ADMIN
}

model Attendance {
  id        Int       @id @default(autoincrement())
  user_id   Int
  user      User      @relation(fields: [user_id], references: [id])
  date      DateTime
  check_in  DateTime?
  check_out DateTime?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([user_id, date])
  @@index([user_id, date])
  @@map("attendances")
}
