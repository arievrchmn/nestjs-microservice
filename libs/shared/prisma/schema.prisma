generator client {
  provider      = "prisma-client"
  output        = "../src/lib/generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "mysql"
}

model User {
  id        Int      @default(autoincrement()) @id

  email     String   @unique
  password  String
  role      UserRole
  is_active Boolean  @default(true)

  name      String
  phone     String?
  photo_url String?
  position  String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  STAFF
  ADMIN
}


model Attendance {
  id         Int      @id @default(autoincrement())
  user_id    Int
  date       DateTime
  check_in   DateTime?
  check_out  DateTime?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([user_id, date])
  @@unique([user_id, date])
  @@map("attendances")
}
